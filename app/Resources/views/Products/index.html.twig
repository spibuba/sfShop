{% extends "::base.html.twig" %}

{% block title %}Produkty{% endblock %}

{% block body %}

    <h1>Lista produkt√≥w</h1>

    {% for product in products %}

        {% if loop.first or (loop.index % 4) == 0  %}
            <div class="row">
        {% endif %} 

        {% include 'Products/product.html.twig' with {'product': product } %}

