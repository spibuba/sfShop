{% extends "::base.html.twig" %}

{% block title %}AppBundle:Basket:index{% endblock %}

{% block body %}
    <h1>Koszyk</h1>

    {% if basket.products %}
        <a href="{{ path('basket_clear') }}" class="btn btn-warning" title="Wyczyść koszyk">Wyczyść koszyk</a>
    {% endif %}
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>nazwa</th>
                <th>cena</th>
                <th>ilość</th>
            </tr>
        </thead>
        <tbody>
            {% for product in basket.products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>
                        <a href="{{ path('basket_remove', { 'id': product.id }) }}" class="btn btn-danger">usuń</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Koszyk jest pusty</td>
                </tr>
            {% endfor %}
            Suma:
            {#<a href="{{ path('basket_amount') }}" class="btn btn-danger">usuń</a>#}

            {% render(controller('AppBundle:Basket:getAmount'))  %}
        </tbody>
    </table>
            <a href="{{ path('basket_clear') }}" class="btn btn-warning">Zamów</a>

{% endblock %}
