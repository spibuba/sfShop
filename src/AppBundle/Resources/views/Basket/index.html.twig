{% extends "::base.html.twig" %}

{% block title %}Koszyk{% endblock %}

{% block body %}
<h1>Koszyk</h1>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>Id</th>
            <th>nazwa</th>
            <th>kategoria</th>
            <th>cena</th>
            <th>opis</th>
        </tr>
    </thead>
    <tbody>
                
        {% for product in products_in_basket %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.category.name }} </td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a href="{{ path('basket_del', { 'id': product.id }) }}" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        {% else %}
            <p> 'Koszyk jest pusty' </p>
        {% endfor %}
        
        <tr>
            <td>
                <a href="{{ path('basket_clear') }}" class="btn btn-primary">Czyść koszyk</a>
            </td>
        </tr>
    </tbody>
{% endblock %}
