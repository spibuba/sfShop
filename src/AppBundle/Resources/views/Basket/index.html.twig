{% extends "::base.html.twig" %}

{% block title %}AppBundle:Basket:index{% endblock %}

{% block body %}
<h1>Koszyk</h1>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>Id</th>
            <th>nazwa</th>
            <th>cena</th>
            <th>opis</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products_in_basket %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.desc }}</td>
                <td>
                    <a href="{{ path('basket_del', {'id': product.id} )}}" class="btn btn-primary">Usuń</a>
                </td>
            </tr>
            {% endfor %}
        <tr>
            <td>
                <a href="{{ path('basket_clear') }}" class="btn btn-primary">Czyść koszyk</a>
            </td>
        </tr>
    </tbody>
{% endblock %}
